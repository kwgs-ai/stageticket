<%= render "shared/errors", obj: @actor %>

<table class="attr">
  <tr>
    <th><%= form.label :名前 %></th>
    <td><%= form.text_field :name, size: 8 %></td>
  </tr>
  <tr>
    <th><%= form.label :ログインID %></th>
    <td><%= form.text_field :login_name, size: 8 %></td>
  </tr>
  <% if @actor.new_record? %>
    <tr>
      <th><%= form.label :パスワード %></th>
      <td><%= form.text_field :password %></td>
    </tr>
  <% end %>
</table>
