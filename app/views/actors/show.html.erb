<% @page_title = "公演マイページ" %>
<h1><%= @page_title %></h1>

<% if @actor.present? %>
  <table class="list">
    <thead>
    <tr>
      <th>名前</th>
      <th>ID</th>
      <th>パスワード</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td style="text-align: right">
        <%= @actor.name %></td>
      <td><%= @actor.login_name %></td>
      <td><%= @actor.password %></td>
    </tr>
    </tbody>
    </tbody>
  </table>

<%= menu_link_to "申請一覧", actor_false_stages_actors_path %>
<%= link_to "退会手続き", @actor, method: :delete, data: { confirm: "本当に削除しますか" } %>
