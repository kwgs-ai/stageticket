<% @page_title = "舞台詳細" %>
<h1><%= @page_title %></h1>


<% if @stage.present? %>
  <table class="list">
    <thead>
    <tr>
      <th>舞台タイトル</th>
      <th>団体名</th>
      <th>日時</th>
      <th>午前・午後</th>
      <th>本文</th>
      <th>予約人数</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td style="text-align: right">
        <%= @stage.title %></td>
      <td>
        <%= @stage.actoraccount.actor_name %>
      </td>
      <td><%= @stage.date %></td>
      <td><%= @stage.time %></td>
      <td><%= @stage.text %></td>
      <td><%= "#{@count}人" %></td>
    </tr>
    </tbody>
    </tbody>
  </table>
<% end %>
<%= form_for @stage do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :text %>
  <%= form.hidden_field :date %>
  <%= form.hidden_field :time %>
  <p>この舞台を承認する</p>
  <%= form.check_box :status, {class: "check"}, "true", "false" %>
  <div><%= form.submit %></div>
<% end %>