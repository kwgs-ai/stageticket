<% @page_title = "予約一覧" %>
<h1><%= @page_title %></h1>


<% if @reservations.present? %>
  <table class="list">
    <thead>
    <tr>
      <th>舞台タイトル</th>
      <th>団体名</th>
      <th>日時</th>
      <th>午前・午後</th>
      <th>本文</th>
      <th>席種</th>
      <th>金額</th>
    </tr>
    </thead>
    <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td style="text-align: right">
          <%=link_to reservation.stage.title, [reservation.useraccount, reservation]%></td>
        <td>
          <%= reservation.stage.actoraccount.actor_name %>
        </td>
        <td><%= reservation.stage.date %></td>
        <td><%= reservation.stage.time %></td>
        <td><%= reservation.stage.text %></td>
        <td><%= reservation.seat.seat_type %></td>
        <td><%= reservation.seat.cost %></td>
      </tr>
      </tbody>
    <% end %>
    </tbody>
    </table>
<% end %>