<% @page_title = "予約一覧" %>
<h1><%= @page_title %></h1>


<% if @reservations.present? %>
  <table class="reservation-index">
    <thead>
    <tr>
      <th>予約番号</th>
      <th>舞台タイトル</th>
      <th>団体名</th>
      <th>日時</th>
      <th width="299">午前・午後</th>
    </tr>
    </thead>
    <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td>
          <%= reservation.id %>
        </td>
        <td>
          <%= link_to reservation.stage.title, [reservation.user, reservation] %></td>
        <td>
          <%= reservation.stage.actor.name %>
        </td>
        <td><%= reservation.stage.date %></td>
        <td><%= reservation.stage.time == 1 ? "午前" : "午後" %></td>
      </tr>
      </tbody>
    <% end %>
    </tbody>
    </table>
  <%= paginate @reservations  %>
<% end %>
<%=link_to "<<戻る",current_user ,class: "link_to"%>