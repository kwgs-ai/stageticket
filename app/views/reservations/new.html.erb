<% @page_title = "予約確認" %>
<h1><%= @page_title %></h1>

<% if @stage.present? %>
  <table class="list">
    <thead>
    <tr>
      <th>舞台タイトル</th>
      <th>団体名</th>
      <th>日時</th>
      <th>午前・午後</th>
      <th>本文</th>
      <th>残り座席数　S</th>
      <th>残り座席数　A</th>
      <th>残り座席数　B</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td style="text-align: right">
        <%= @stage.title %></td>
      <td>
        <%= @stage.actor.name %>
      </td>
      <td><%= @stage.date %></td>
      <td><%= @stage.time %></td>
      <td><%= @stage.text %></td>
      <td><%= @stage.seats.where(reservation_id: nil, seat_type: "S").count %></td>
      <td><%= @stage.seats.where(reservation_id: nil, seat_type: "A").count %></td>
      <td><%= @stage.seats.where(reservation_id: nil, seat_type: "B").count %></td>
    </tr>
    </tbody>
    </tbody>
  </table>
<% end %>

<%= form_for [@stage, @reservation] do |form| %>
  <p>S席のチケット枚数
    <%= text_field_tag "s_count" ,"",{size: 3} %>
  </p>
  <p>A席のチケット枚数
    <%= text_field_tag "a_count" ,"",{size: 3} %>
  </p>
  <p>B席のチケット枚数
    <%= text_field_tag "b_count" ,"",{size: 3} %>
  </p>
  <div><%= form.submit %></div>
<% end %>
