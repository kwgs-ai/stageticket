<% @page_title = "予約確認" %>
<h1><%= @page_title %></h1>

<% if @stage.present? %>
  <table class="list">
    <thead>
    <tr>
      <th>舞台タイトル</th>
      <th>団体名</th>
      <th>日時</th>
      <th>午前・午後</th>
      <th>本文</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td style="text-align: right">
        <%= @stage.title%></td>
      <td>
        <%= @stage.actoraccount.actor_name %>
      </td>
      <td><%= @stage.date %></td>
      <td><%= @stage.time %></td>
      <td><%= @stage.text %></td>
    </tr>
    </tbody>
    </tbody>
  </table>
<% end %>

<%= form_for [@stage,@reservation] do |form| %>
<tr>
  <th><%= form.label :席種 %></th>
  <td><%= form.select :seat,{'S':'S', 'A': 'A', 'B':'B'}  %></td>
</tr>

  <div><%= form.submit %></div>
<% end %>
