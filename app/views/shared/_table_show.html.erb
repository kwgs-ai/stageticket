<table class="attr">
  <thead>
  <% if action_name == 'actor_stage_show' || action_name == 'admin_stage_show' %>
    <tr>
      <th>予約ステータス</th>
      <% if stage.status == 1 %>
        <td>申請中</td>
      <% elsif stage.status == 2 %>
        <td>承認</td>
      <% else %>
        <td>拒否</td>
      <% end %>
    </tr>
  <% end %>
  <tr>
    <th width="200">舞台番号</th>
    <td>
      <%= stage.id %>
    </td>
  </tr>
  <tr>
    <th>舞台タイトル</th>
    <td>
      <%= stage.title %></td>
  </tr>
  <tr>
    <th>団体名</th>
    <td>
      <%= stage.actor.name %>
    </td>
  </tr>
  <tr>
    <th>日時</th>
    <td><%= stage.date %></td>
  </tr>
  <tr>
    <th>午前・午後</th>
    <td><%= stage.time == 1 ? "午前" : "午後" %></td>
  </tr>
  <tr>
    <th>本文</th>
    <td><%= stage.text %></td>
  </tr>
  <% if action_name == 'actor_stage_show' %>
    <tr>
      <th>予約人数</th>
      <td><%= "#{@count.to_i}人" %></td>
    </tr>
  <% end %>
  </thead>
  <tbody>

</table>
