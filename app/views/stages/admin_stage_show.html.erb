<% @page_title = "舞台詳細" %>
<h1><%= @page_title %></h1>


<% if @stage.present? %>
  <table class="list">
    <thead>
    <tr>
      <th>舞台タイトル</th>
      <th>団体名</th>
      <th>日時</th>
      <th>午前・午後</th>
      <th>本文</th>
      <th>予約人数</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td style="text-align: right">
        <%= @stage.title %></td>
      <td>
        <%= @stage.actor.name %>
      </td>
      <td><%= @stage.date %></td>
      <td><%= @stage.time== 1 ? "午前" : "午後" %></td>
      <td><%= @stage.text %></td>
      <td><%= "#{@count}人" %></td>
    </tr>
    </tbody>
    </tbody>
  </table>
<% end %>
<%= form_for @stage do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :text %>
  <%= form.hidden_field :date %>
  <%= form.hidden_field :time %>
  <%= hidden_field_tag :S_prise, @s %>
  <%= hidden_field_tag :A_prise, @a %>
  <%= hidden_field_tag :B_prise, @b %>
  <p>この舞台を承認する</p>
  <%= form.select :status, { '承認': 2, '拒否': 3 } %>
  <div><%= form.submit %></div>
  <%= link_to "この舞台の編集", [:edit, @stage] %>
<% end %>