<table class="list">
  <thead>
  <tr>
    <th>舞台タイトル</th>
    <th>団体名</th>
    <th>日時</th>
    <th>午前・午後</th>
    <th>本文</th>
  </tr>
  </thead>
  <tbody>
    <tr>
      <td style="text-align: right">
        <%= @stage.title %></td>
      <td>
        <%= @stage.actoraccount.actor_name %>
      </td>
      <td><%= @stage.date %></td>
      <td><%= @stage.time %></td>
