<%#= render "shared/errors", obj: @stage %>
<% @page_title = "舞台確認" %>
<h1><%= @page_title %></h1>
<table class="list">
  <thead>
  <tr>
    <th>舞台タイトル</th>
    <th>団体名</th>
    <th>カテゴリー</th>
    <th>日時</th>
    <th>午前・午後</th>
    <th>本文</th>
    <th>S値段</th>
    <th>A値段</th>
    <th>B値段</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td style="text-align: right">
      <%= @stage.title %></td>
    <td>
      <%= @stage.actor.name %>
    </td>
    <td>
      <%= @stage.category.name %>
    </td>
    <td><%= @stage.date %></td>
    <td><%= @stage.time == 1 ? "午前" : "午後" %></td>
    <td><%= @stage.text %></td>
    <td><%= @s %></td>
    <td><%= @a %></td>
    <td><%= @b %></td>
  </tr>
  </tbody>
  </tbody>
</table>


<%= form_for @seats, url: stages_path do |form| %>
  <%= form.hidden_field :title, :value => @stage.title %>
  <%= form.hidden_field :category_id, :value => @stage.category_id %>
  <%= form.hidden_field :text, :value => @stage.text %>
  <%= form.hidden_field :date, :value => @stage.date %>
  <%= form.hidden_field :time, :value => @stage.time %>
  <% @seats.collection.each do |seat| %>
    <% @count = 0 %>
    <%= form.fields_for 'seats[]', seat do |fs| %>
      <% if @count == 0 %>
        <%= fs.hidden_field :seat_prise, :value => @s %>
      <% elsif @count == 1 %>
        <%= fs.hidden_field :seat_prise, :value => @a %>
      <% else %>
        <%= fs.hidden_field :seat_prise, :value => @b %>
      <% end %>
    <% end %>
    <% @count += 1 %>
  <% end %>
  <div><%= form.submit %></div>
<% end %>