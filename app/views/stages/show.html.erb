<% @page_title = "舞台詳細" %>
<h1><%= @page_title %></h1>


<% if @stage.present? %>
  <table class="list">
    <thead>
    <tr>
      <th>舞台タイトル</th>
      <th>団体名</th>
      <th>日時</th>
      <th>午前・午後</th>
      <th>本文</th>
      <th>残り座席数　S</th>
      <th>残り座席数　A</th>
      <th>残り座席数　B</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td style="text-align: right">
        <%= @stage.title %></td>
      <td>
        <%= @stage.actor.name %>
      </td>
      <td><%= @stage.date %></td>
      <td><%= @stage.time == 1 ? "午前" : "午後" %></td>
      <td><%= @stage.text %></td>
      <td><%= @stage.seats.where(reservation_id: nil, seat_type: "S").count %></td>
      <td><%= @stage.seats.where(reservation_id: nil, seat_type: "A").count %></td>
      <td><%= @stage.seats.where(reservation_id: nil, seat_type: "B").count %></td>
    </tr>
    </tbody>
    </tbody>
  </table>
  <ul>
    <li>S席</li>
    <li> <%= @stage.seats.find_by(seat_type:"S").seat_prise%>円</li>
    <li>A席</li>
    <li><%= @stage.seats.find_by(seat_type:"A").seat_prise%>円</li>
    <li>B席</li>
    <li><%= @stage.seats.find_by(seat_type:"B").seat_prise%>円</li>
  </ul>


<% end %>
<% unless current_actor || current_admin %>
<%= link_to "この舞台を予約", [:new, @stage, :reservation] %>
<% end %>
