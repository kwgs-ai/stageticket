<% @page_title = "ユーザーマイページ" %>
<h1><%= @page_title %></h1>

<% if @user.present? %>
  <table class="list">
    <thead>
    <tr>
      <th>名前</th>
      <th>ID</th>
      <th>パスワード</th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td style="text-align: right">
          <%= @user.user_name %></td>
        <td><%= @user.user_ID %></td>
        <td><%= @user.password %></td>
      </tr>
      </tbody>
    </tbody>
    </table>
<% end %>

<%= link_to "退会手続き", @user, method: :delete, data: { confirm: "本当に削除しますか"} %>
<%=menu_link_to "ユーザー情報編集",[:edit, @user] %>